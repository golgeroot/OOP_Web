@model OOP_Web.Entity.Product

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Güncelleme Sayfası</h1>
<form method="Post">
    @Html.Label("Ürün Id")
    @Html.TextBoxFor(x=>x.Id, new {@class="form-control"})
    <br />
    @Html.Label("ÜRün Adı")
    @Html.TextBoxFor(x=>x.Name, new{@class="form-control"})
    <br />
    @Html.Label("Fiyat")
    @Html.TextBoxFor(x=>x.Price, new {@class="form-control"})
    <br />
    @Html.Label("Stok Sayısı")
    @Html.TextBoxFor(x=>x.Stock, new {@class="form-control"})
    <button class="btn btn-success">Güncelle</button>
</form>